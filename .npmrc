# Teamnest API - Package Manager Config
# Last modified: ${DATE}

# Strict engine enforcement
engine-strict = true

# Version control
save-exact = false
git-tag-version = false

# Security
strict-ssl = true
ignore-scripts = false 

# Performance
# cache-max = 0 # deprecated
maxsockets = 1
prefer-offline = true
prefer-dedupe = true
legacy-peer-deps = false

# CI/CD Optimization
package-lock = true
fund = false
progress = true

