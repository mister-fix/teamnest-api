{
  "endOfLine": "lf",
  "printWidth": 80,
  "useTabs": true,
  "tabWidth": 2,
  "semi": true,
  "trailingComma": "es5",
  "quoteProps": "as-needed",
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "requirePragma": false,
  "insertPragma": true,
	"experimentalTernaries": true,
	"experimentalOperatorPosition": "start",
  "proseWrap": "preserve",
  "embeddedLanguageFormatting": "off",
  "singleAttributePerLine": false,
  "overrides": [
		{ "files": "*.{cmp,page}", "options": { "parser": "html" } },
		{ "files": "*.hbs", "options": { "printWidth": 120 } },
		{ "files": ["*.json", "*.jsonc"], "options": { "printWidth": 100 } },
		{
			"files": "*.{yaml,yml}",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}